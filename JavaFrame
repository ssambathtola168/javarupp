    private void jbnamecokaActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jbnamecokaActionPerformed
    // TODO add your handling code here:
      if (jbnamecoka.isSelected()) {
        jbname1.setSelected(false);
        jbnametwo.setSelected(false);
        fillStudentInfo("coka"); // Should match the name you use in fillStudentInfo
    } else {
        clearFields();
    }//GEN-LAST:event_jbnamecokaActionPerformed
    }                          
    /**
     * @param args the command line arguments 
     */
    private void fillStudentInfo(String name) {
    if ("Tola".equals(name)) {
        tfName.setText("Tola");
        tfgender.setText("Male");
        tfBrithday.setText("01/01/2005");
        tfDepartment.setText("IT");
        tfmajo.setText("Software Engineering");
        tfyear.setText("2");
        tftelephone.setText("0719846118");
    } else  if (name.equals("Srim")) {
        tfName.setText("Srim");
        tfgender.setText("Female");
        tfBrithday.setText("02/02/2005");
        tfDepartment.setText("IT");
        tfmajo.setText("IT");
        tfyear.setText("2");
        tftelephone.setText("098765432");
   }else if(name.equals("coka")){
        tfName.setText("Coka");
        tfgender.setText("Male");
        tfBrithday.setText("2/3/2002");
        tfDepartment.setText("IT");
        tfmajo.setText("IT");
        tfyear.setText("2");
        tftelephone.setText("0717277711");
        } else {
    }
}

