    private void jbname1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jbname1ActionPerformed
        // TODO add your handling code here:
            if (jbname1.isSelected()) {
        jbnametwo.setSelected(false);
        fillStudentInfo("Tola");
    } else {
        clearFields();
    }

    }//GEN-LAST:event_jbname1ActionPerformed

    private void jbnametwoActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jbnametwoActionPerformed
        // TODO add your handling code here:
        if (jbnametwo.isSelected()) {
        jbname1.setSelected(false);
        fillStudentInfo("Srim");
    } else {
        clearFields();
    }
    }//GEN-LAST:event_jbnametwoActionPerformed

